FROM python:3.11.4-slim-buster

WORKDIR /usr/src/app

ENV PYTHONDONTWRITEBYTECODE 1
ENV PYTHONUNBUFFERED 1

RUN apt-get update && \
    apt-get -y install gcc postgresql && \
    apt-get clean

RUN pip install --upgrade pip
RUN pip install poetry

COPY poetry.lock .
COPY pyproject.toml .

RUN poetry config virtualenvs.create false
RUN poetry install --no-interaction --no-ansi

COPY celery/worker/start.sh /start_celery_worker.sh
RUN chmod +x /start_celery_worker.sh

COPY celery/beat/start.sh /start_celery_beat.sh
RUN chmod +x /start_celery_beat.sh

COPY celery/flower/start.sh /start_flower.sh
RUN chmod +x /start_flower.sh

COPY . .